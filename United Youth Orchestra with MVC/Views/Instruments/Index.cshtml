@model IEnumerable<United_Youth_Orchestra_with_MVC.Models.Instrument>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:darkgreen">Instrument</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MusicInst)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MusicInst)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" style="color:blue">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" style="color:green">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" style="color:red">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
