@model IEnumerable<United_Youth_Orchestra_with_MVC.Models.Member>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:darkgreen">Member</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schoolyear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusicInst)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Schoolyear.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MusicInst.MusicInst)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" style="color:blue">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" style="color:green">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" style="color:red">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
